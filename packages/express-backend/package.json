{
  "name": "express-backend",
  "version": "1.0.0",
  "description": "The Express.js backend of the sample project",
  "main": "build/index.js",
  "type": "module",
  "types": "build",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && concurrently npm:build:dev npm:launch:dev",
    "build": "tsc",
    "build:dev": "tsc --watch",
    "launch:dev": "nodemon --watch build --experimental-specifier-resolution=node build/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "models": "1.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4",
    "typescript": "^4.0.2"
  }
}
