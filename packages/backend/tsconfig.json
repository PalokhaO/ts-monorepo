{
    "compilerOptions": {
        "incremental": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "inlineSources": true,
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "target": "es2015",
        "outDir": "build",
        "declaration": true,
        "declarationMap": true,
        "alwaysStrict": true,
        "preserveWatchOutput": true,
        "pretty": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "noImplicitAny": false,
        "strictNullChecks": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}